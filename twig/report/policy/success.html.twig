<div class="row result-group py-3">
  <div class="col">

    <h3 id="{{ audit_response.policy.name }}">{{ audit_response.policy.title }}</h3>
    {{ include(template_from_string(audit_response.policy.description | mustache2twig, "description field on success.html.twig" )) | markdown_to_html }}

    <div class="card border-success mb-3 assessment-card">
      <div class="badge badge-success"><span class="fa fa-check-circle" aria-hidden="true"></span> Success</div>
      <!-- <div class="badge badge-success"><span class="fa fa-check-circle" aria-hidden="true"></span></div> -->
      <div class="card-body">
        {% with audit_response.tokens %}
        {{ include(template_from_string(audit_response.policy.success | mustache2twig, "success field on success.html.twig")) | markdown_to_html }}
        {% endwith %}
      </div>
    </div> <!-- /assessment-card -->

    {% if audit_response.hasWarning %}
      <div class="card border-warning mb-3 assessment-card">
        <div class="badge badge-warning"><span class="fa fa-exclamation-triangle" aria-hidden="true"></span> Warning</div>
        <!-- <div class="badge badge-warning"><span class="fa fa-exclamation-triangle" aria-hidden="true"></span></div> -->
        <div class="card-body">
          {% with audit_response.tokens %}
          {{ include(template_from_string(audit_response.policy.warning | mustache2twig, "warning field on success.html.twig")) | markdown_to_html }}
          {% endwith %}
        </div>
      </div> <!-- /assessment-card -->
    {% endif %}

  </div> <!-- /col -->
</div> <!-- /row -->
