<div class="row result-group py-3">
  <div class="col">

    <h3 id="{{ audit_response.policy.name }}">{{ audit_response.policy.title }}</h3>
    {{ include(template_from_string(audit_response.policy.description | mustache2twig, "description field on failure.html.twig" )) | markdown_to_html }}

    <div class="card border-danger mb-3 assessment-card">
      <div class="badge badge-danger"><span class="fa fa-minus-circle" aria-hidden="true"></span> Failure</div>
      <div class="card-body">
        {% with audit_response.tokens %}
        {{ include(template_from_string(audit_response.policy.failure | mustache2twig, "failure field on failure.html.twig")) | markdown_to_html }}
        {% endwith %}
      </div>
    </div> <!-- /assessment-card -->

    {% if audit_response.hasWarning %}
      <div class="card border-warning mb-3 assessment-card">
        <div class="badge badge-warning"><span class="fa fa-exclamation-triangle" aria-hidden="true"></span> Warning</div>
        <div class="card-body">
          {% with audit_response.tokens %}
          {{ include(template_from_string(audit_response.policy.warning | mustache2twig, "warning field on success.html.twig")) | markdown_to_html }}
          {% endwith %}
        </div>
      </div> <!-- /assessment-card -->
    {% endif %}

    <div class="card border-info mb-3 assessment-card">
      <div class="badge badge-info"><span class="fa fa-info-circle" aria-hidden="true"></span> Remediation</div>
      <div class="card-body">
        {% with audit_response.tokens %}
        {{ include(template_from_string(audit_response.policy.remediation | mustache2twig, "remediation field on failure.html.twig")) | markdown_to_html }}
        {% endwith %}
      </div>
    </div> <!-- /assessment-card -->

  </div> <!-- /col -->
</div> <!-- /row -->
